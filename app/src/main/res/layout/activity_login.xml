<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.divide.ibitech.divide_ibitech.Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ibitech_logo_no_slogan"
        android:textColor="#ffff"
        android:contentDescription="@string/imgContentDescription" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="@string/txtLogin"
        android:textColor="#000"
        android:textSize="20sp" />

    <View
        android:layout_width="88dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:background="#000" />

    <EditText
        android:id="@+id/etIDNumber"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="9dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint="@string/hint_idNumber"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/etCellphoneNum"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="9dp"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:ems="10"
        android:hint="@string/hint_CellphoneNum"
        android:inputType="number"
        android:text="" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="9dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonstyle"
        android:text="@string/txtLoginBtn"
        android:textColor="@color/White"
        android:clickable="true"
        android:onClick="OnLogin"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/txtForgot_password"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_weight="2"
            android:text="@string/txtNew_user"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:text="@string/txtNewRegister"
            android:paddingLeft="7dp"
            android:textSize="16sp"
            android:paddingStart="7dp"
            tools:ignore="RtlSymmetry"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="2dp"
        android:text="@string/txtTermsandConds"
        android:textAlignment="center" />

</LinearLayout>
