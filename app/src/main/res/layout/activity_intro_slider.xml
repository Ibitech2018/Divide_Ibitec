<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"

android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/doc"
tools:context="com.divide.ibitech.divide_ibitech.IntroSlider">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="507dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/smallogo"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imglogo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="@string/slide_1_title"

            android:textSize="18dp" />

        <EditText
            android:id="@+id/Fname"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="First Name "
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/Lname"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Fname"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/DoB"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lname"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="1996/12/23"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/DoB"
            android:layout_alignStart="@+id/DoB"
            android:layout_below="@+id/DoB"
            android:text="Gender"
            android:layout_marginTop="5dp"
            android:textSize="21dp"/>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Gender"
            android:layout_alignBottom="@+id/Gender"
            android:layout_alignLeft="@+id/imglogo"
            android:layout_alignStart="@+id/imglogo"
            android:text="Female" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/DoB"
            android:layout_alignRight="@+id/DoB"
            android:layout_alignTop="@+id/radioButton"
            android:text="Male" />

        <EditText
            android:id="@+id/addresLine1"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Gender"
            android:layout_alignStart="@+id/Gender"
            android:layout_below="@+id/radioButton"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Address Line  1"
            android:inputType="" />
        <EditText
            android:id="@+id/addresLine2"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Gender"
            android:layout_alignStart="@+id/Gender"
            android:layout_below="@+id/addresLine1"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Address Line  2"
            android:inputType="" />

        <EditText
            android:id="@+id/City"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addresLine2"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="City"
            android:inputType="" /> />


    </RelativeLayout>

</LinearLayout>
