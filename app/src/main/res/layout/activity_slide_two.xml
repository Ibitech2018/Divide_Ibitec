<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_back"
    tools:context="com.divide.ibitech.divide_ibitech.Slide_two">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="545dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo2" />

        <TextView
            android:id="@+id/more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Status"
            android:layout_marginTop="146dp"
            android:gravity="center_horizontal"
            android:text="Additional details"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/Status" />


        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="191dp"
            android:text="Status"
            android:textSize="21dp"
            android:layout_alignParentLeft="true" />


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_blood"
            android:layout_alignStart="@+id/list_blood"
            android:layout_alignTop="@+id/Status" />

        <TextView
            android:id="@+id/blood_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="244dp"
            android:text="Blood Type"
            android:textSize="21dp"
            android:layout_alignParentLeft="true" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/list_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/blood_type"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="200dp"
            android:ems="10"
            android:hint="Weight "
            android:inputType="textPersonName"
            android:text=""
            android:layout_alignParentLeft="true" />


        <EditText
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="145dp"
            android:ems="10"
            android:hint="Height "
            android:inputType="textPersonName"
            android:text=""
            android:layout_alignParentLeft="true" />


        <TextView
            android:id="@+id/uploadPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="99dp"
            android:gravity="center_horizontal"
            android:text="Upload a profile  picture"
            android:textSize="18sp"
            android:layout_alignParentLeft="true" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:text="Done" />
    </RelativeLayout>


</LinearLayout>
