<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.divide.ibitech.divide_ibitech.Login">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="575dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo2" />


        <EditText
            android:id="@+id/Fname"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imglogo"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:text=""

            />

        <EditText
            android:id="@+id/Lname"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/Fname"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:text=""

            />

        <EditText
            android:id="@+id/Dob"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/Lname"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:hint="DD/MM/YYYY"
            android:text=""

            />

        <TextView
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/Dob"
            android:layout_marginLeft="21sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:text="Gender"
            android:textSize="21sp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/Gender"
            android:layout_alignBottom="@id/Gender"
            android:layout_alignLeft="@id/imglogo"
            android:layout_alignStart="@id/imglogo"
            android:text="Female" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/female"
            android:layout_alignBottom="@+id/female"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/imglogo"
            android:layout_toRightOf="@+id/imglogo"
            android:text="Male" />

        <EditText
            android:id="@+id/address1"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/male"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:hint="AddressLine 1"
            android:inputType="text"
            android:text=""

            />

        <EditText
            android:id="@+id/suburb"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/address1"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:hint="Suburb"
            android:inputType="text"
            android:text=""

            />

        <EditText
            android:id="@+id/City"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/suburb"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:hint="City"
            android:inputType="text"
            android:text=""
            />
        <EditText
            android:id="@+id/postalCode"
            android:layout_width="322sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/City"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15dp"
            android:hint="Postal Code"
            android:inputType="number"
            android:text=""
            />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:background="@drawable/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/male"
            android:layout_alignStart="@+id/male"
            android:layout_below="@+id/postalCode"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:text="Next" />
    </RelativeLayout>

</LinearLayout>



