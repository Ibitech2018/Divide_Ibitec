<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.divide.ibitech.divide_ibitech.Register">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ibitech_mini_logo"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="Register"
        android:textColor="#000"
        android:textSize="20sp" />

    <View android:background="#000"
        android:layout_marginTop="9dp"
        android:layout_width = "88dp"
        android:layout_gravity="center"
        android:layout_height="1dp"/>


    <EditText
        android:id="@+id/etIDNumber"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="9dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="14"
        android:hint="@string/hint_idNumber"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:inputType="number"
         />

    <EditText
        android:id="@+id/etCellphoneNumber"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="9dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="14"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:hint="@string/hint_CellphoneNum"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/etEmailAddress"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="9dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="14"
        android:hint="@string/txtHint_Email_address"
        android:inputType="textEmailAddress"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="" />

    <EditText
        android:id="@+id/etCreatePassword"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="9dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="14"
        android:hint="Create Password"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="textPassword" />
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="20dip"
            android:minHeight="20dip"
            android:layout_weight="1"
            android:progress="0"/>

        <TextView
            android:id="@+id/password_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Weak"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="9dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="14"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginLeft="8dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <CheckBox
            android:id="@+id/chkPolicy"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="By registering, you agree to our Terms and Conditions and Privacy Policy."
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:focusable="true"
            android:onClick="OnCheck"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/buttonstyle"
        android:text="Register"
        android:textColor="@android:color/white"
        android:onClick="OnRegister"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/already_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a User?"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="17sp"
            android:layout_gravity="end" />
        <TextView
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:text="Login"
            android:paddingLeft="7dp"
            android:textSize="17sp"
            android:focusable="true"
            android:paddingStart="7dp"
            android:textColorLink="#0000FF"
            android:textColor="#0000FF"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>


</LinearLayout>
